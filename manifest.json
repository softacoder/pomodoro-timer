{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.0",
  "description": "Helps you focus and get things done!",
  "icons": {
    "16": "pomodoro-timer.png",
    "48": "pomodoro-timer.png",
    "128": "pomodoro-timer.png"
  },
  "action": {
    "default_icon": "pomodoro-timer.png",
    "default_title": "Pomodoro Timer",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  }
}
